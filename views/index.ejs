<%- include("header") -%>
<div class="container cst-wrapper">
  <form action="/users" method="POST">
    <div class="display-5 mb-3">
      Please Register <i><span class="text-danger"> &nbsp; * </span>are required fields.</i>
    </div>
    <div class="form-row mb-5">
      <div class="col-sm-12 col-md-6 mb-sm-4 mb-md-2">
        <span class="text-danger">*</span>        
        <input
          type="text"
          name="firstName"
          class="form-control"
          placeholder="First name"
          required
        />
      </div>
      <div class="col-sm-12 col-md-6 mb-sm-4 mb-md-2">
        <span class="text-danger">*</span>
        <input
          type="text"
          name="lastName"
          class="form-control"
          placeholder="Last name"
          required
        />
      </div>
    </div>
    <div class="form-row mb-5">
      <div class="col-sm-12 col-md-6 mb-sm-4 mb-md-2">
        <span class="text-danger">*</span>
        <input
          type="email"
          name="email"
          class="form-control"
          placeholder="Email"
          required
        />
      </div>
      <div class="col-sm-12 col-md-6 mb-sm-4 mb-md-2">
        <span class="text-danger">*</span>
        <input
          type="number"
          name="phoneNumber"
          class="form-control"
          placeholder="Phone number"
          required
        />
      </div>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-success btn-lg">Register</button>
    </div>
  </form>
</div>
<%- include("footer") -%>
